<!DOCTYPE html>
<html>
  <head>
    <title>Boardtoy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="navbar-nav mr-auto">
        </div>
        <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %>
        <% else %>
          <li><%= link_to ' 新規登録',  new_user_registration_path, class: "btn btn-outline-primary"%>&emsp;</li>
          <li><%= link_to 'ログイン', new_user_session_path, class: "btn btn-outline-primary"%></li>
        <% end %>
    </header>
  <body>
    <div class="container body-down">
        <div class="body">
          <%= yield %>
        </div>
    </div>
  </body>
</html>
